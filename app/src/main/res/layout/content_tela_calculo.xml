<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff8c1a"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lucas_pc.calculoimc.TelaCalculo"
    tools:showIn="@layout/activity_tela_calculo">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="7"
        android:id="@+id/editTextPeso"
        android:hint="peso"
        android:textColor="#ffffff"
        android:textColorLink="#ffffff"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="8dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="7"
        android:id="@+id/editTextAltura"
        android:textColor="#ffffff"
        android:textColorLink="#ffffff"
        android:hint="altura"

        android:layout_marginTop="2dp"
        android:layout_marginLeft="158dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textColor="#ffffff"
        android:textColorLink="#ffffff"
        android:ems="18"
        android:id="@+id/editTextNome"
        android:layout_below="@+id/editTextPeso"
        android:layout_alignLeft="@+id/editTextPeso"
        android:layout_alignStart="@+id/editTextPeso" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="25dp"
        android:padding="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado"
            android:textSize="20sp"
            android:id="@+id/BtnResultado"
            android:background="#66a3ff"
            android:textColor="#ffffff"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="59dp"
            android:width="155dp"
            />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="230dp"
            android:id="@+id/iVREsultado"
            android:layout_marginTop="15dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:id="@+id/tVResultado"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginLeft="59dp"
            />
    </LinearLayout>


</RelativeLayout>
